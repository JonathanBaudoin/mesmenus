{% extends 'base.html.twig' %}

{% block content %}
    <div id="actions">
        <a href="{{ path('app_recipe_add') }}" class="btn"><i class="fa fa-plus" aria-hidden="true"></i> {{ 'recipe.add'|trans }}</a>
        <a href="{{ path('app_ingredient_add') }}" class="btn"><i class="fa fa-plus" aria-hidden="true"></i> {{ 'ingredient.add'|trans }}</a>
    </div>

    <ul id="recipe-list">
    {% for recipe in pagination %}
        <li>
            <h2><a href="{{ path('app_recipe_view', {'slug': recipe.slug}) }}">{{ recipe.name }}</a></h2>
            <span class="recipe-author">proposÃ©e par {{ recipe.user.username }}</span>
        </li>
    {% endfor %}
    </ul>
{% endblock %}

{% block stylesheets %}
    {% stylesheets filter="sass"
    "assets/css/recipe/list.scss"
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
