{% extends 'base.html.twig' %}

{% block content %}
    <div>
        <a href="{{ path('app_recipe_add') }}" class="btn">{{ 'add'|trans }}</a>
        <a href="{{ path('app_ingredient_add') }}" class="btn">{{ 'ingredient.add'|trans }}</a>
    </div>

    <ul id="recipe-list">
    {% for recipe in pagination %}
        <li>
            <h2><a href="{{ path('app_recipe_view', {'slug': recipe.slug}) }}">{{ recipe.name }}</a></h2>
        </li>
    {% endfor %}
    </ul>
{% endblock %}

{% block stylesheets %}
    {% stylesheets filter="sass"
    "assets/css/recipe/list.scss"
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
