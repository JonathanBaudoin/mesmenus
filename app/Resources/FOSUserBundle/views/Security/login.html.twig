{% extends "base.html.twig" %}

{% block content %}
    {% block fos_user_content %}

        <h1>{{ 'user.login.h1'|trans }}</h1>

        {% if error %}
            <div class="flash-message flash-error">
                {{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <div class="form-medium">
                <div>
                    <label for="username">{{ 'user.username'|trans() }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>

                <div>
                    <label for="password">{{ 'user.password'|trans() }}</label>
                    <input type="password" id="password" name="_password" required="required" />
                </div>

                <div class="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'user.remember_me'|trans() }}</label>
                </div>

                <div class="center">
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                </div>
            </div>
        </form>
    {% endblock fos_user_content %}
{% endblock content %}

{% block stylesheets %}
    {% stylesheets filter="sass" "assets/css/form.scss"
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}